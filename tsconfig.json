{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./public/build",
        // "outFile": "public/build/bundle.js",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "target": "es5",
        "lib": [
            "es6",
            "es7",
            "dom"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "config",
        "**/*.spec.ts"
    ]
}